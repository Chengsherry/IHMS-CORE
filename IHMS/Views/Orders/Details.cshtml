@model IHMS.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Add custom styles here */

    .container {
        margin-top: 10px;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .back-link {
        margin-top: 20px;
    }
</style>

<div class="container" >
    <h1 style="padding: 50px;">訂單明細</h1>

    <div>
        <hr />
        <table class="table table-bordered">
            <tr>
                <th class="col-sm-2">訂單編號:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Ordernumber)</td>
            </tr>
            <tr>
                <th class="col-sm-2">會員:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Member.MemberId)</td>
            </tr>
            <tr>
                <th class="col-sm-2">總積分:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Pointstotal)</td>
            </tr>
            <tr>
                <th class="col-sm-2">狀態:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.State)</td>
            </tr>
            @*<tr>
                <th class="col-sm-2">原因:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Reason)</td>
            </tr>*@
            <tr>
                <th class="col-sm-2">建立時間:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Createtime)</td>
            </tr>
            @*<tr>
                <th class="col-sm-2">更新時間:</th>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Updatetime)</td>
            </tr>*@
        </table>
    </div>

    <div class="back-link">
        <a asp-action="List" class="btn btn-primary">回到列表</a>
    </div>
</div>
