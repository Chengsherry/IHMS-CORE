@model IEnumerable<IHMS.Models.Coach>

@{
    ViewData["Title"] = "List_UnReviewed";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<h1>教練列表</h1>

<p>
    <a asp-action="Create">新增測試</a>
</p>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="https://localhost:7127/Teacher/List_Done">已審核</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#" >待審查</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="https://localhost:7127/Teacher/List_Rejected">已退件</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="https://localhost:7127/Teacher/List_resigned">離職</a>
    </li>
</ul>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applytime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmtime)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        <img src="~/Images/@item.Image" width="100" height="125" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commission)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applytime)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Confirmtime)
                    </td>
                    <td>
                        @Html.ActionLink("詳細內容", "Details", "Teacher", new { id = item.CoachId },
                new { @class = "btn btn-success" }) |
                        @Html.ActionLink("審查通過", "Pass", "Teacher", new { id = item.CoachId },
                new { onclick = "return confirm('此教練將移轉至已審查區')", Class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
